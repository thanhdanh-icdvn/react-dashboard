{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "cypress",
    ],
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src",
    "./types/cypress.d.ts",
    "./jest.config.ts"
, "src/__test__"  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}